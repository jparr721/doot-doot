// Place your key bindings in this file to override the defaults
[
    {
        "command": "runCommands",
        "key": "ctrl+l",
        "args": {
            "commands": [
                "extension.vim_ctrl+w",
                "extension.vim_right",
            ]
        },
        "when": "editorTextFocus"
    },
    {
        "command": "runCommands",
        "key": "ctrl+h",
        "args": {
            "commands": [
                "extension.vim_ctrl+w",
                "extension.vim_left",
            ]
        },
    },
    {
        "command": "runCommands",
        "key": "ctrl+k",
        "args": {
            "commands": [
                "extension.vim_ctrl+w",
                "extension.vim_up",
            ]
        },
    },
    {
        "command": "runCommands",
        "key": "ctrl+j",
        "args": {
            "commands": [
                "extension.vim_ctrl+w",
                "extension.vim_down",
            ]
        },
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "cmd+b",
        "command": "-markdown.extension.editing.toggleBold",
        "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
    },
    {
        "key": "cmd+b",
        "command": "-workbench.action.toggleSidebarVisibility"
    }
    // {
